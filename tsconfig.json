{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "allowJs": true,
        "types": [
            "@cloudflare/workers-types",
            "@types/node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/types.d.ts",
        "frontend/**/*.html"
    ]
}